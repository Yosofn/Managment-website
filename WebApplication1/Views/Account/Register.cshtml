@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<div class="main-agileinfo">
			<div class="agileits-top">
				<div asp-validation-summary="All"></div>
				<form asp-action="Register" method="post">
					<input class="text" type="text" asp-for="Name" placeholder="Name" required="">
					<input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
					<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
					<input class="text w3lpass" type="password" asp-for="ConfirmedPassword" placeholder="Confirm Password" required="">
					<div class="wthree-text">
						<label class="anim">
							<input type="checkbox" class="checkbox" asp-for="IsAgree" required="">
							<span>I Agree To The Terms & Conditions</span>
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="SIGNUP">
				</form>
				<p>Do you have an Account? <a asp-action="Login"> Login Now!</a></p>
			</div>
		</div>
